# 阿里云认证（必填）
ALIYUN_ACCESS_KEY_ID=your-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-access-key-secret

# Telegram 通知配置（必填）
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# 检测间隔（秒），默认 60
CHECK_INTERVAL=60

# 启动失败重试次数，默认 3
RETRY_COUNT=3
# 重试间隔（秒），默认 30
RETRY_INTERVAL=30

# 同一实例通知冷却时间（秒），默认 300
NOTIFY_COOLDOWN=300

# 流量超额自动关机（默认启用）
TRAFFIC_SHUTDOWN_ENABLED=true
# 国内流量阈值（GB），默认 19
TRAFFIC_LIMIT_CHINA_GB=19
# 国外流量阈值（GB），默认 195
TRAFFIC_LIMIT_NON_CHINA_GB=195
# 流量检查间隔（秒），默认 300
TRAFFIC_CHECK_INTERVAL=300

# 日志级别：debug/info/warn/error，默认 info
LOG_LEVEL=info
# 日志文件路径，留空输出到控制台
LOG_FILE=

# GCP Credits 监控（默认关闭）
GCP_CREDITS_ENABLED=false
# Service Account JSON 密钥（文件路径或JSON内容）
GCP_SERVICE_ACCOUNT_JSON=/path/to/service-account.json
# Billing Account ID，格式 01XXXX-XXXXXX-XXXXXX
GCP_BILLING_ACCOUNT_ID=
# Credits 总额（美元），默认 300
GCP_CREDITS_TOTAL=300
# 剩余百分比告警阈值，默认 5
GCP_CREDITS_ALERT_PERCENT=5
# 检查间隔（秒），默认 3600
GCP_CREDITS_CHECK_INTERVAL=3600